<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="machine_list" name="Dynamic Snippet">
        <section class="best_seller_product_snippet">
            <div class="ref-arrival-content">
                <p class="ref-section_head ref-centerhead__underline ref-head--primary"
                   style="color: #0d5272;">Machines
                </p>
            </div>
            <div id="top_machines_carousel"/>
        </section>
    </template>

    <template id="dynamic_snippet" inherit_id="website.snippets"
              name="Snippet">
        <xpath expr="//div[@id='snippet_effect']//t[@t-snippet][last()]"
               position="after">
            <t t-snippet="machine_management.machine_list"/>
        </xpath>
    </template>

</odoo>
