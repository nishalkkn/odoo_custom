<?xml version="1.0"?>
<odoo>
    <record id="machine_management_action" model="ir.actions.act_window">
        <field name="name">Machine</field>
        <field name="res_model">machine.management</field>
        <field name="view_mode">tree,form</field>
    </record>

    <record id="machine_management_view_tree" model="ir.ui.view">
        <field name="name">machine.management.tree</field>
        <field name="model">machine.management</field>
        <field name="arch" type="xml">
            <tree string="Channel">
                <field name="name" context="{'default_machine': name }"/>
                <field name="date_of_purchase"/>
                <field name="purchase_value"/>
                <field name="customer"/>
                <field name="warranty"/>
            </tree>
        </field>
    </record>

    <record id="machine_management_view_form" model="ir.ui.view">
        <field name="name">machine.management.form</field>
        <field name="model">machine.management</field>
        <field name="arch" type="xml">

            <form string="Machine Management">
                <header>
                    <button name="transfer_machine_button" class="btn btn-secondary" string="Machine Transfer" type="object"/>
                    <field name="state" widget="statusbar" statusbar_visible="active,in_service"
                           options="{'clickable':'1'}"/>
                </header>
                <sheet>
                    <div name="button_box">
                        <button name="get_transfers" icon="fa-bars">
                            <field string="Transfer" name="transfer_count" widget="statinfo"/>
                        </button>
                    </div>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <h1>
                            <field name="name" help="Name of the machine" placeholder="Machine"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="sequence_no" help="Sequence number of the machine"/>
                            <field name="serial_no" help="Unique serial number for machine"/>
                            <field name="date_of_purchase" help="Purchase date of machine"/>
                            <field name="purchase_value" help="The value of machine when purchased"/>
                        </group>
                        <group>
                            <field name="company" help="Company name"/>
                            <field name="customer" help="Customer who bought the machine"/>
                            <field name="warranty" help="Is any warranty for machine"/>
                            <field name="machine_type" help="Which is the type of the machine"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field colspan="2" name="description" nolabel="1"/>
                            </group>
                        </page>
                        <page string="Instructions">
                            <group>
                                <field name="machine_instructions" colspan="2" nolabel="1"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

    <menuitem id="machine_management_menu_root" name="Machine management"/>
    <menuitem id="machine_management" action="machine_management_action" parent="machine_management_menu_root"/>

</odoo>
