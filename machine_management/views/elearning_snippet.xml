<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="elearning_snippet" name="Elearning Course Snippet">
        <section class="oe_structure container dynamic_snippet_blog">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center py-5">
                        <h1 class="h1">Elearning Courses</h1>
                        <div class="h3" style="text-align:center">Latest Elearning Courses</div>
                        <div id="courosel">
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </template>

    <template id="external_snippets" inherit_id="website.snippets" priority="8">
        <xpath expr="//div[@id='snippet_effect']//t[@t-snippet][last()]" position="after">
            <t t-snippet="machine_management.elearning_snippet"/>
        </xpath>
    </template>
</odoo>